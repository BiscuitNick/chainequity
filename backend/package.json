{
  "name": "chainequity-backend",
  "version": "1.0.0",
  "description": "Backend services for ChainEquity project",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-schema",
    "copy-schema": "mkdir -p dist/db && cp src/db/schema.sql dist/db/",
    "dev": "nodemon src/server.ts",
    "start": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-issuer": "npm run build && node dist/test-issuer.js",
    "test-indexer": "npm run build && node dist/test-indexer.js",
    "test-indexer-local": "npm run build && node dist/test-indexer-local.js",
    "test-captable": "npm run build && node dist/test-captable.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "alchemy-sdk": "^3.6.5",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
