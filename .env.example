# ============================================
# ChainEquity Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# Blockchain Configuration
# ============================================

# Alchemy API Key for blockchain access and event indexing
# Get yours at: https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_NETWORK=polygon-amoy

# Deployer/Issuer Private Key (DO NOT commit real keys!)
# For local development, you can use Hardhat's test account:
DEPLOYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
ISSUER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ============================================
# Network RPC URLs
# ============================================

# Local Network (for development with Hardhat)
USE_LOCAL_NETWORK=true
LOCAL_RPC_URL=http://127.0.0.1:8545

# Testnet RPC URLs
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_api_key
POLYGON_AMOY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/your_alchemy_api_key

# ============================================
# Contract Configuration
# ============================================

# Deployed contract address (set after deployment)
TOKEN_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# ============================================
# Block Explorer Verification
# ============================================

# Etherscan API Key for contract verification
# Get yours at: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan API Key for Polygon network verification
# Get yours at: https://polygonscan.com/myapikey
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# ============================================
# Gas Reporting (Optional)
# ============================================

# Enable gas reporting in tests
REPORT_GAS=false

# CoinMarketCap API key for gas cost in USD
# Get yours at: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ============================================
# Backend Server Configuration
# ============================================

# Server port
PORT=4000

# Node environment
NODE_ENV=development

# Database path
DATABASE_PATH=./backend/data/chainequity.db

# ============================================
# Frontend Configuration (Next.js)
# ============================================

# These are public variables exposed to the browser
NEXT_PUBLIC_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_RPC_URL=http://localhost:8545
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# WalletConnect Project ID (optional)
# Get yours at: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ============================================
# Security Notes
# ============================================
#
# NEVER commit this file with real private keys!
# NEVER use Hardhat test accounts on mainnet!
# ALWAYS use a hardware wallet or secure key management for production
#
# The default DEPLOYER_PRIVATE_KEY above is Hardhat's well-known
# test account #0. It's safe for local development ONLY.
