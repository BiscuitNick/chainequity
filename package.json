    "tsx": "^4.20.6",
    "typescript": "~5.8.0",
    "viem": "^2.38.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "alchemy-sdk": "^3.6.5",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "inquirer": "^12.10.0",
    "ora": "^9.0.0"
  }
